<% content_for :title, "Plants" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Plants</h1>
    <%= link_to "New plant", new_plant_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="plants" class="flex md:flex-row flex-col gap-4">
    <% if @plants.any? %>
      <% @plants.each do |plant| %>
       <%= render partial: "plant_box", locals: { 
      plant: plant, 
      buttons: link_to("Show", plant, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-100 hover:bg-gray-50 inline-block font-medium") 
    } %>

      <% end %>
    <% else %>
      <p class="text-center my-10">No plants found.</p>
    <% end %>
  </div>
</div>
